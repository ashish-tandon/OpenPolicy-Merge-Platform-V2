# OpenPolicy Environment Configuration
# Copy this file to .env and update values as needed

# Database Configuration
DATABASE_URL=postgresql+psycopg://openpolicy:openpolicy@db:5432/openpolicy
DATABASE_TEST_URL=postgresql+psycopg://openpolicy:openpolicy@db:5432/openpolicy_test

# Environment
ENV=local
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=1
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
REPRESENT_API_URL=https://represent.opennorth.ca/api/v1
REPRESENT_API_KEY=

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ETL Configuration
ETL_BATCH_SIZE=1000
ETL_MAX_RETRIES=3
ETL_RETRY_DELAY=5

# File Storage
STORAGE_BACKEND=local
STORAGE_PATH=/data
STORAGE_BUCKET=openpolicy-data

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Feature Flags
FEATURE_SEARCH_ENABLED=true
FEATURE_COMMENTS_ENABLED=false
FEATURE_NOTIFICATIONS_ENABLED=false

# Development
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]
